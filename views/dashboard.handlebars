<div class="columns is-centered mt-6">
    <div class="column is-one-third">
      <p class="title is-1 is-centered mb-4" class="bd-notification is-primary" id="titles">Find Jobs</p>
      </div>
      </div>
{{#each jobs as |job| }}
<div class="columns is-centered mt-6">
    <div class="column is-one-third">
<article class="message">
  <div class="message-header">
    <ul><li><p>{{job.job_title}}</p></li>
     <li><h1> {{job.job_company}}</h1></li>
     </ul>
  </div>
  <div class="message-body">
   <ul><li class="mb-3">Experience and Skills: {{job.job_technologies}}</li>
   <li class="mb-3"> Salary: ${{job.job_salary}}</li>
   <li class="mb-3">Job Description: {{job.job_description}}</li>
   <li class="mb-3">Created on: {{job.date_created}}</li>
   </ul>
  <li class="mb-3"><a href="mailto:{{job.job_contact}}">Apply Here</a></li>
  </div>
</article>
  </div>
</div>
{{/each}}



